    <!-- Hero Slider -->
    <section id="home" class="hero-slider">
        <div class="slide active" style="background-image: url('https://via.placeholder.com/1200x600/000000/FFFFFF?text=Luxury+Style+1');">
            <div class="hero-text">
                <h2>Elevate Your Style with Elegance</h2>
